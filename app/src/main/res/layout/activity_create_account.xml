<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abu.customizeecomerce.CreateAccount">

    <Button
        android:text="submite"
        android:layout_height="100px"
        android:id="@+id/button"
        android:background="@android:drawable/progress_horizontal"
        android:textColor="@android:color/background_light"
        android:layout_width="200px"
        android:layout_below="@+id/editText5"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:layout_marginTop="44dp" />

    <TextView
        android:text="PhoneNO."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText3" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_above="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Re-password"
        android:layout_height="100px"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_width="230px"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <EditText
        android:ems="10"
        android:id="@+id/editText4"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:background="@android:drawable/editbox_background"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:password="false"
        android:capitalize="none"
        android:layout_width="400px"
        android:layout_height="70px"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:inputType="textPassword" />

    <EditText
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText3"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:background="@android:drawable/editbox_background"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:password="false"
        android:capitalize="none"
        android:layout_width="400px"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_height="70px" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:background="@android:drawable/editbox_background"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:password="false"
        android:capitalize="none"
        android:layout_width="400px"
        android:layout_height="70px"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:ems="10"
        android:id="@+id/editText5"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:background="@android:drawable/editbox_background"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:password="false"
        android:capitalize="none"
        android:layout_width="400px"
        android:layout_height="70px"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:inputType="phone" />

    <TextView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/textView8"
        android:background="@drawable/qq"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Create Account"
        android:id="@+id/textView7"
        android:layout_height="70px"
        android:textSize="18sp"
        android:layout_width="400px"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

</RelativeLayout>
