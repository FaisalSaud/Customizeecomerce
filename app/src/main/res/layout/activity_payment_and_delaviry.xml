<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abu.customizeecomerce.PaymentAndDelaviry">
    <TextView
        android:id="@+id/textView23PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PaymentMethod"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="270dp"
        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/Paymentspinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView56PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DeliveryMethod"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/Deliveryspinner"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/Paymentspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView56PD"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:text="[Select a Method...]" />

    <Spinner
        android:id="@+id/Deliveryspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:text="[Select a Method...]"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="item"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/itemName"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="13dp"
        android:layout_marginTop="23dp"
        android:text="Item Description:" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView54"
        android:layout_marginStart="3dp"
        android:layout_marginTop="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:text="Number of item" />

    <EditText
        android:id="@+id/numberOfItem"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView58"
        android:layout_alignEnd="@+id/textView54" />

    <TextView
        android:id="@+id/textView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView58"
        android:layout_marginStart="280dp"
        android:text="Item Price" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/numberOfItem"
        android:layout_alignBottom="@+id/numberOfItem"
        android:layout_alignStart="@+id/textView59" />

</RelativeLayout>
