<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abu.customizeecomerce.CreateAppStep5">

    <Button
        android:id="@+id/saveItemButtonStep5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:onClick="saveItem"
        android:text="@string/SaveItem"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/buildButtonStep5"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buildButtonStep5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="44dp"
        android:background="@color/black_overlay"
        android:text="@string/Build"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textView28"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/saveItemButtonStep5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="@string/UploadImage"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="288dp"
        android:onClick="uploadImg"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/ItemNameStep5"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ItemNameStep5"
        android:layout_alignStart="@+id/ItemNameStep5"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="@string/Step5"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/ItemImageStep5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:visibility="visible"
        tools:editable="false"
        tools:inputType="none"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="142dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/ItemNameStep5" />

    <EditText
        android:id="@+id/ItemNameStep5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignEnd="@+id/barsSpinnerStep5"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/ItemName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView31" />
    <TextView
        android:id="@+id/textView25"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="  1"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView26"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_above="@+id/buildButtonStep5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />
    <TextView
        android:id="@+id/textView26"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="  2"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_toRightOf="@+id/textView25"
        android:layout_toEndOf="@+id/textView25" />
    <TextView
        android:id="@+id/textView27"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="3"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        android:layout_alignBaseline="@+id/textView26"
        android:layout_alignBottom="@+id/textView26"
        android:layout_toRightOf="@+id/textView26"
        android:layout_toEndOf="@+id/textView26" />
    <TextView
        android:id="@+id/textView28"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="  4"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27" />
    <TextView
        android:id="@+id/textView46"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@android:color/background_light"
        android:text="  5"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView28"
        android:layout_alignBottom="@+id/textView28"
        android:layout_toRightOf="@+id/textView28"
        android:layout_toEndOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ItemDescription"
        android:layout_alignBottom="@+id/ItemImageStep5"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/ItemDescriptionStep5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/buildButtonStep5"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/buildButtonStep5"
        android:ems="10"
        android:inputType="textMultiLine|textLongMessage"
        android:singleLine="false" />

    <Spinner
        android:id="@+id/barsSpinnerStep5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Please select bars"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView45"
        android:layout_alignEnd="@+id/saveItemButtonStep5" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PlzEntrBar"
        android:layout_alignBottom="@+id/itemPriceStep5"
        android:layout_toEndOf="@+id/checkMode" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_alignBaseline="@+id/itemPriceStep5"
        android:layout_alignBottom="@+id/itemPriceStep5"
        android:layout_alignStart="@+id/barsSpinnerStep5" />

    <EditText
        android:id="@+id/itemPriceStep5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemDescriptionStep5"
        android:layout_marginLeft="50dp"
        android:layout_toStartOf="@+id/ItemNameStep5"
        android:editable="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SR"
        android:layout_alignBaseline="@+id/itemPriceStep5"
        android:layout_alignBottom="@+id/itemPriceStep5"
        android:layout_centerHorizontal="true" />
    <CheckBox
        android:id="@+id/checkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Mode"
        android:layout_below="@+id/textView27"
        android:layout_toStartOf="@+id/ItemImageStep5" />

</RelativeLayout>
